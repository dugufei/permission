<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

  <TextView
      android:id="@+id/tv_permission_dialog_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:textColor="#27314A"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:text="请开启存储文件权限"
      />

  <TextView
      android:id="@+id/tv_permission_dialog_content"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:paddingBottom="10dp"
      android:paddingLeft="20dp"
      android:paddingRight="20dp"
      android:paddingTop="10dp"
      android:textColor="#27314A"
      android:textSize="14sp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="1.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/tv_permission_dialog_title"
      tools:text="为了确保你的账户信息安全"
      />
  <View
      android:id="@+id/view2"
      android:layout_width="match_parent"
      android:layout_height="1px"
      app:layout_constraintTop_toBottomOf="@+id/tv_permission_dialog_content"
      android:background="#E7E8EB"
    />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="50dp"
      android:orientation="horizontal"
      app:layout_constraintTop_toBottomOf="@+id/view2"
      >
    <TextView
        android:id="@+id/tv_permission_cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#8E94A7"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/view1"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="取消"
        />
    <TextView
        android:id="@+id/tv_permission_sure"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="#497BEC"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view1"
        tools:text="去开启"
        />
    <View
        android:id="@+id/view1"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:background="#E7E8EB"
        app:layout_constraintEnd_toStartOf="@+id/tv_permission_sure"
        app:layout_constraintStart_toEndOf="@+id/tv_permission_cancel"
        />
  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>